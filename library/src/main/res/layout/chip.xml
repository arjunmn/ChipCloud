<?xml version="1.0" encoding="utf-8"?>
<com.arjunmn.chipcloud.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/material_chip_height"
    android:orientation="horizontal"
    android:background="@drawable/chip">

    <TextView android:id="@+id/chip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_chip_height"
        android:text="Chip Test Really Long Name"
        android:textSize="@dimen/default_textsize"
        android:textColor="@color/chip"
        android:minWidth="50dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"/>

    <ImageView android:id="@+id/remove_chip"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/chip"
        android:layout_width="32dp"
        android:layout_height="0dp"
        android:src="@drawable/cancel_dark_bg" />

</com.arjunmn.chipcloud.Chip>
